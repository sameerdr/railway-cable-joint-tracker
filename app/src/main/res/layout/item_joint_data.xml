<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date: 01/01/2024"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Section: ABC"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvSubSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sub-Section: XYZ"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvKm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KM: 123.45"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvCableType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cable: Type A"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvJointType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Joint: Type B"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location: 0.000000, 0.000000"
            android:layout_marginTop="4dp"
            android:textColor="#2196F3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap to view/edit details"
            android:layout_marginTop="8dp"
            android:textSize="12sp"
            android:textColor="#757575" />

    </LinearLayout>

</androidx.cardview.widget.CardView>
